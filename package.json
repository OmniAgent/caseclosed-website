  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "preview": "next build && next start",
    "clean": "rm -rf .next out dist",
    "analyze": "cross-env ANALYZE=true next build",
    "export": "next export",
    "sitemap": "next-sitemap",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "prepare": "husky install",
    "christopher:test": "echo 'Testing Christopher AI avatars...'",
    "nevada:validate": "echo 'Validating Nevada compliance...'",
    "legal:audit": "echo 'Running legal compliance audit...'"
